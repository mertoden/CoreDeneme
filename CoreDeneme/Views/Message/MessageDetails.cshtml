@model Entity.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Message Details</h1>
<br />

@Html.Label("Message ID")
@Html.TextBoxFor(x => x.MessageID, new { @class = "form-control" })
<br />
@Html.Label("Message Title")
@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
<br />
@Html.Label("Message Content")
@Html.TextAreaFor(x => x.MessageDetails,20,3, new { @class = "form-control" })
<br />

<button class="btn btn-success">Back to messages</button>
